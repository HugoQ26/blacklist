<% include partials/header %>

<div class="row">
    

<% include partials/sidenav %>
<div class="col-6 p-lg-3 border border-dark rounded">
        
        <h3>Dodawanie pacjenta</h3>
            
        <form action="/addosoba" method="POST" class="form-group">
           
            
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">Dane osoby</span>
                </div>
                <input type="text" name="name" class="form-control" id="dane-osoby" aria-describedby="basic-addon3" placeholder="Podaj dane osoby pożyczającej" required>
            </div>
            



            <div class="form-inline row">

                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Pożyczany lek</span>
                    </div>
                    <input type="text" name="lekipoz[0][nazwaleku]" class="form-control" id="lek" aria-describedby="basic-addon3" autocomplete="off" placeholder="Nazwa leku, dawka, wielkosc opakowania" required>
                    
                </div>
                
                
                <div class="input-group mb-3 col-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Ilość</span>
                    </div>
                    <input type="number" name="lekipoz[0][ilosc]" class="form-control" id="ilosc" aria-describedby="basic-addon3" autocomplete="off" placeholder="Ilość opakowań" required>
                </div>
            </div>
            
            
            <div class="form-inline row">
                
                <div id="uzytkownicy" class="input-group my-lg-4 col-9 mr-0">
                    
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Osoba wydająca: </span>
                    </div>
                    
                    <div class="form-check form-check-inline ml-lg-2">
                        <input class="form-check-input" type="radio" name="wydajacy" id="Radio1" value="szefowa" required>
                        <label class="form-check-label" for="Radio1">
                            Szefowa
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="wydajacy" id="Radio2" value="agnieszka" required>
                        <label class="form-check-label" for="Radio2">
                            Agnieszka
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="wydajacy" id="Radio3" value="marcin" required>
                        <label class="form-check-label" for="Radio3">
                            Marcin
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="wydajacy" id="Radio4" value="irena" required>
                        <label class="form-check-label" for="Radio4">
                            Irena
                        </label>
                    </div>
                </div>
                <input type="text" name="lekipoz[0][datawydania]" class="form-control col-3" aria-describedby="basic-addon3" autocomplete="off" value="<%=data%>" readonly>
            </div>
            
            

            <label for="uwagi">Podaj uwagi (opcjonalne).</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">Uwagi</span>
                </div>
                <textarea name="lekipoz[0][uwagi]" id="uwagi" cols="80" rows="3" class="form-control" autocomplete="off" placeholder="np. zapłacone tylko Rp. lub Rp - niepłacone"></textarea>                
            </div>
            
            <button type="submit" class="btn btn-block btn-success">Zatwierdz formularz</button>

        </form>
        
            
        </div>
    </div>
        
    
    
    <% include partials/footer %>



